#!/bin/bash

set -e # exit immediately if a simple command exits with a non-zero status
set -u # report the usage of uninitialized variables

# Set Golang dependency
export GOROOT=$(cd "/var/vcap/packages/golang" && pwd -P)
export PATH=${GOROOT}/bin:${PATH}

# Build Firehose To Fluentd package
mkdir -p ${BOSH_COMPILE_TARGET}/go/src/github.com/shinji62
mv ${BOSH_COMPILE_TARGET}/firehose-to-fluentd ${BOSH_COMPILE_TARGET}/go/src/github.com/shinji62/
cd ${BOSH_COMPILE_TARGET}/go/src/github.com/shinji62/firehose-to-fluentd
export GOPATH=${BOSH_COMPILE_TARGET}/go:${BOSH_COMPILE_TARGET}/go/src/github.com/shinji62/firehose-to-fluentd/Godeps/_workspace
go build -o out/firehose-to-fluentd

# Copy Firehose To Fluentd package
mkdir -p ${BOSH_INSTALL_TARGET}/bin
cp -a ${BOSH_COMPILE_TARGET}/go/src/github.com/shinji62/firehose-to-fluentd/out/firehose-to-fluentd ${BOSH_INSTALL_TARGET}/bin/

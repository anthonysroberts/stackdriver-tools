#!/bin/bash -e

RUN_DIR=/var/vcap/sys/run/stackdriver-nozzle
LOG_DIR=/var/vcap/sys/log/stackdriver-nozzle
PIDFILE=$RUN_DIR/stackdriver-nozzle.pid

case $1 in

start)

mkdir -p $RUN_DIR
mkdir -p $LOG_DIR

chown -R vcap:vcap $LOG_DIR

(crontab -l | sed /stackdriver.*logrotate/d; cat /var/vcap/jobs/stackdriver-nozzle/config/stackdriver_logrotate.cron) | sed /^$/d | crontab

exec >>$LOG_DIR/stackdriver-nozzle.stdout.log \
    2>>$LOG_DIR/stackdriver-nozzle.stderr.log

chpst -u vcap:vcap /var/vcap/packages/stackdriver-nozzle/bin/stackdriver-nozzle &

echo $! > $PIDFILE

;;

stop)
kill -9 `cat $PIDFILE`
rm -f $PIDFILE

;;

*)
echo "Usage: stackdriver-nozzle {start|stop}"

;;

esac

---
name: firehose_to_fluentd

packages:
  - firehose-to-fluentd

templates:
  firehose_to_fluentd_ctl: bin/firehose_to_fluentd_ctl

properties:
  firehose_to_fluentd.debug:
    description: "Enable/disable debug mode (this disables forwarding to fluentd)"
    default: false
  firehose_to_fluentd.cf.api_url:
    description: "Cloud Foundry API URL"
  firehose_to_fluentd.cf.admin_username:
    description: "Cloud Foundry admin username"
  firehose_to_fluentd.cf.admin_password:
    description: "Cloud Foundry admin password"
  firehose_to_fluentd.cf.skip_ssl_validation:
    description: "Please don't"
    default: false
  firehose_to_fluentd.cf.doppler_url:
    description: "Cloud Foundry Doppler URL (only if you want to overwrite the default doppler endpoint returned by /v2/info"
  firehose_to_fluentd.cf.subscription_id:
    description: "ID for the Firegose subscription"
    default: "firehose"
  firehose_to_fluentd.cf.events:
    description: "Comma seperated list of events you would like. Valid options are ContainerMetric, HttpStart, HttpStop, HttpStartStop, LogMessage, ValueMetric, CounterEvent, Error"
    default: "LogMessage"
  firehose_to_fluentd.cf.cc_pull_time:
    description: "Cloud Foundry CloudController Pooling time in sec"
    default: "60s"
  firehose_to_fluentd.fluentd.address:
    description: "Fluentd address"
    default: "127.0.0.1"
  firehose_to_fluentd.fluentd.port:
    description: "Fluentd port"
    default: 24224
